
<%- include('../common/head') %>

<body id="alunos">

    <%- include('../common/header') %>

    <div class="divisor">
        <h4 class="pt-2">Alunos</h4>    
    </div>

    <div id="alunos-cabecalho">
        <div class="" style="margin-left: 5%;">
        <div class="row">
            <div class="col-md-2">
                NOME
            </div>
            <div class="col-md-3">
                ENDEREÃ‡O
            </div>
            <div class="col-md-2">
